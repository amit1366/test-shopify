
{% assign section_size = section.blocks.size %}

{% if section_size == 1 %}
  {% assign column_size = "col-lg-12" %}
{% elsif section_size == 2 %}
  {% assign column_size = "col-lg-6" %}
{% else%}
  {% assign column_size = "col-lg-4" %} 
{%endif%}

<section class="categories">
      <div class="container">
        <header class="text-center">
          <h2 class="text-uppercase"><small>{{section.settings.category_header}}</small>{{section.settings.category_text}}</h2>
        </header>
        <div class="row text-left">
        
         {% for block in section.blocks %}
              
             <div class="{{column_size}}"><a href="{{block.setting.banner_url}}">
              <div style="background-image: url({{block.settings.image | img_url: '2048x'}});" class="item d-flex align-items-end">
                <div class="content">
                  <h3 class="h5">{{block.settings.banner_header}}</h3><span>{{block.settings.banner_text}} </span>
                </div>
              </div></a></div>
          {% endfor %} 
         
        </div>
      </div>
    </section>


    {% schema %}

      {
        "name": "Caterory Settings",
          "settings":[
            {
              "id": "category_header",
              "label": "Header",
              "type": "text",
              "default": "Category Header"
            },
            {
              "id": "category_text",
              "label": "Text",
              "type": "text",
              "default": "Category Text"
            }
            ],

            "blocks": [
              {
                "name":"Banner",
                "type": "text",
               "settings":[
                 {
                "id": "image",
                "type": "image_picker",
                "label": "Image"
                 },
                {
                  "id": "banner_header",
                  "type": "text",
                  "label": "Banner Header",
                  "default": "Banner Header"
                },
                {
                  "id": "banner_text",
                  "type": "text",
                  "label": "Banner Text",
                  "default": "Banner Text"
                },
                {
                  "id": "banner_url",
                  "type": "url",
                  "label": "Banner Url"
                } 
               ]
              }

            ]
      }

    {% endschema %}