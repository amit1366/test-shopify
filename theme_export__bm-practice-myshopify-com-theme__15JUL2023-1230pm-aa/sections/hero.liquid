<section class="hero hero-home no-padding">
      <!-- Hero Slider-->
      <div class="owl-carousel owl-theme hero-slider">

        {% for block in section.blocks %}
          <div style="background: url({{block.settings.slider | img_url: '2048x'}});" class="item d-flex align-items-center has-pattern">
            <div class="container">
              <div class="row">
               {{block.settings.text}}
             </div>
            </div>
          </div>

        {% endfor %} 

      </div>
    </section>


    {% schema %}
    {
      "blocks":[
        {
          "type": "text",
          "name": "Slider",
          "settings":[
            {
              "id": "slider",
              "type": "image_picker",
              "label": "Slider"
            },
             {
              "id": "text",
              "type": "textarea",
              "label": "text"
            }
          ]
        }
      ]
    }

    {% endschema %}